<div class="container mt-3 mx-auto flex justify-between items-center">
  <div class="">
    LOGO
  </div>
  <div class="">
    <% if current_user.present? %>
      <%= "Hello, #{current_user.email}" %>
      <%= link_to "Share a movie", new_video_path %>
      <%= button_to "Log out", :destroy_session_users, method: :delete, 'data-no-turbolink' => true %>
    <% else %>
      <%= form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
        <div class="flex items-center">
          <div class="field ml-2">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>

          <div class="field ml-2">
            <%= f.password_field :password, autocomplete: "current-password" %>
          </div>

          <div class="actions ml-2">
            <%= f.submit "Log in", class: "rounded-lg py-2 px-3 bg-blue-600 text-white block" %>
          </div>
          <%= link_to "Register", :new_user_registration, class: "ml-2 rounded-lg py-2 px-3 bg-gray-600 text-white block" %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>